{% extends 'base_user.html.twig' %}

{% block title %}Mes Clients{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Mes Clients</h1>

    <a href="{{ path('add_client') }}" class="btn btn-primary mb-3">
        Add New Client
    </a>

    <div class="row">
        {% for client in pagination %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ client.entreprise ?: 'Entreprise inconnue' }}</h5>
                        <p class="card-text">
                            <strong>Téléphone:</strong> {{ client.phoneNumber }}<br>
                            <strong>Adresse:</strong> {{ client.adressePostale }}, {{ client.ville }}, {{ client.pays }}<br>
                            <strong>Manager:</strong> {{ client.manager }}
                        </p>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex justify-content-end">
                            <a href="{{ path('edit_client', {id: client.id}) }}" class="btn btn-secondary btn-sm me-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <a href="{{ path('factures_client', {id: client.id}) }}" class="btn btn-info btn-sm me-2">
                                <i class="fas fa-file-invoice"></i> Factures
                            </a>
                            <form action="{{ path('delete_client', {'id': client.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">Aucun client trouvé.</div>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}
