    {% extends 'base_user.html.twig' %}

    {% block title %}New Facture{% endblock %}

    {% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Facture</h1>

        {{ form_start(form) }}
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.facturationDate) }}
                    {{ form_widget(form.facturationDate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.facturationDate) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.amount) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.status) }}
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.note) }}
                    {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.note) }}
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button class="btn btn-success">
                <i class="fas fa-save"></i> Create
            </button>
        </div>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('list_clients') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Clients
            </a>
        </div>
    </div>
    {% endblock %}
