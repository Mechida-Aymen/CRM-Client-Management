{% extends 'base_user.html.twig' %}

{% block title %}Client Factures{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Client's Factures</h1>

    <a href="{{ path('facture_add', {'id': owner}) }}" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> New Facture
    </a>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Number</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for facture in factures %}
                <tr>
                    <td>{{ facture.id }}</td>
                    <td>{{ facture.factureNumber }}</td>
                    <td>{{ facture.facturationDate|date('Y-m-d') }}</td>
                    <td>{{ facture.amount }}</td>
                    <td>{{ facture.status|capitalize }}</td>
                    <td>
                        <a href="{{ path('facture_edit', {'id': facture.id}) }}" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form method="post" action="{{ path('facture_delete', {'id': facture.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facture.id) }}">
                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No factures found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}