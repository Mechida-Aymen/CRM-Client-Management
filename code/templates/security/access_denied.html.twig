{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <div class="container mt-5 text-center">
        <h1 class="display-4 text-danger">403 - Access Denied</h1>
        <p class="lead">You do not have the necessary permissions to access this page.</p>
        
        {% if app.user %}
            <p>Logged in as <strong>{{ app.user.userIdentifier }}</strong> with roles: {{ app.user.roles|join(', ') }}</p>
        {% else %}
            <p>You are not logged in. Please <a href="{{ path('app_login') }}">log in</a>.</p>
        {% endif %}

        <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Go to Homepage</a>
    </div>
{% endblock %}
